#include <iostream>
#include<cmath>

/*Napišite program, poštujući sve faze procesa programiranja, 
u kojem ćete unijeti jedan prirodan broj koji predstavlja vrijeme u minutama,
a izračunati i ispisati koliko je to vremena u danima, satima i  minutama.
Upotrijebite funkcije:
int sati (int &);
int dani (int &);
Npr, ako korisnik unese 1520 minute program treba ispisati da je to 1 dan 1 sat i 20 minuta. (1sat =60 minuta; 1 dan=24 sata=1440 minuta)

*/

int sati(int& hour) {
	
	int sat = hour % 1440;
	sat /= 60;
	

	
	
	
	
/*
* 
hour = hour % 1440;
	
	int dan = dani(hour);
	hour=
	
	int minute = hour % 60;
		hour -= minute;
		hour /= 60;
		if(hour<24)
		return hour;
		else if (hour >= 24) {
			hour = hour % 24;
			return hour;
		}*/
	return sat;
}

int dani(int& day) {
	

	int dan =day/1440;
	day = day % 1440;
	return dan;
}


int main() {
	int vrijeme, vrijeme1, vrijeme2;

	std::cout << "Unesite vrijeme u minutama";
	std::cin >> vrijeme;

	//prirodni broj
	while (vrijeme <= 0) {
		std::cout << "Unesite vrijeme u minutama";
		std::cin >> vrijeme;
	}
	vrijeme1 = vrijeme;
	vrijeme2 = vrijeme;
	vrijeme1 = vrijeme1 % 60;
	std::cout <<"Uneseno vrijeme je: "<< dani(vrijeme)<<" dan(a), " << sati(vrijeme)<<" sat(i), i " << vrijeme<<" minuta,";




	
	return 0;
}

------------------------treci----------------------
#include <iostream>
#include<cmath>

/*Napišite program, poštujući sve faze procesa programiranja, 
u kojem ćete unijeti jedan prirodan broj koji predstavlja vrijeme u minutama,
a izračunati i ispisati koliko je to vremena u danima, satima i  minutama.
Upotrijebite funkcije:
int sati (int &);
int dani (int &);
Npr, ako korisnik unese 1520 minute program treba ispisati da je to 1 dan 1 sat i 20 minuta. (1sat =60 minuta; 1 dan=24 sata=1440 minuta)

*/

int sati(int& hour) {
	int sat = hour % 1440;
	sat = hour / 60;
	sat = sat % 24;
	if(sat<24)
	hour = hour - (sat * 60);
	
	
	
	
	
/*
* 
hour = hour % 1440;
	
	int dan = dani(hour);
	hour=
	
	int minute = hour % 60;
		hour -= minute;
		hour /= 60;
		if(hour<24)
		return hour;
		else if (hour >= 24) {
			hour = hour % 24;
			return hour;
		}*/
	return sat;
}

int dani(int& day) {
	
	
	int dan =day/1440;
	day = day % 1440;
	
	
	return dan;
}


int main() {
	int vrijeme, vrijeme1, vrijeme2;

	std::cout << "Unesite vrijeme u minutama";
	std::cin >> vrijeme;

	//prirodni broj
	while (vrijeme <= 0) {
		std::cout << "Unesite vrijeme u minutama";
		std::cin >> vrijeme;
	}
	vrijeme1 = vrijeme;
	vrijeme2 = vrijeme;
	vrijeme1 = vrijeme1 % 60;
	std::cout << "Uneseno vrijeme je: " << dani(vrijeme) << " dan(a), " << sati(vrijeme) << " sat(i), i ";
	std::cout << vrijeme << " minuta,";




	
	return 0;
}
